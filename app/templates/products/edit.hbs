{{page-title "Edit"}}
<form {{on "submit" this.save}} aria-label="properties-form" class="container">
  <h1>Edit {{this.model.name}}</h1>
  <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <Input @type="text" class="form-control" id="name" name="name" placeholder="my product"
           @value={{this.model.name}} />
  </div>
  <div class="mb-3">
    <label for="description" class="form-label">Description</label>
    <Input @type="text" class="form-control" id="description" name="description" placeholder="my product description"
           @value={{this.model.description}} />
  </div>

  <button type="submit" class="btn btn-success">Save</button>
</form>

<form {{on "submit" this.savePicture}} aria-label="picture-form" class="container">
  <div class="mb-3">
    <label for="picture" class="form-label">Picture</label>
    <input type="file" class="form-control" id="picture" name="picture">
  </div>
  <button type="submit" class="btn btn-success">Save</button>
</form>