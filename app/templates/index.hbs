<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <Input @type="text" class="form-control" id="name" name="name" placeholder="my product" @value={{this.name}} />
      </div>
    </div>
    <div class="col-md-4">
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <Input @type="text" class="form-control" id="description" name="description"
               placeholder="my product description" @value={{this.description}} />
      </div>
    </div>
    <div class="col-md-4">
      <div class="mb-3">
        <label for="seller" class="form-label">Seller</label>
        <Input @type="text" class="form-control" id="seller" name="seller" placeholder="seller legal name"
               @value={{this.seller}} />
      </div>
    </div>

    {{#each this.model as |offering|}}
      <div class="col-md-4">
        <div class="card overview-card">
          <div class="card-body">
            <h5 class="card-title">{{offering.name.value}}</h5>
            <h6 class="card-subtitle mb-2 text-muted">{{offering.currency.value}} {{offering.currencyValue.value}}</h6>
            <p class="card-text">{{offering.description.value}}</p>
            <a class="btn btn-primary" href="#" role="button" {{ on "click" (fn this.buy offering.offering.value offering.pod.value)}}>Buy!</a>
          </div>
          <div class="card-footer text-muted">
            Offered by <a href="{{offering.sellerWebId.value}}">{{offering.seller.value}}</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>