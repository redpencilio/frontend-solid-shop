{{page-title "Offerings"}}

<div class="container">
  <div class="row">
    {{#each this.model as |offering|}}
      <div class="col-md-4 col-xl-3">
        <div class="card overview-card">
          {{# if offering.includes.image }}
            <img class="card-img-top" src="{{offering.includes.image}}/download" alt="{{offering.name}}">
          {{/ if }}
          <div class="card-body">
            <h5 class="card-title">{{offering.name}}</h5>
            <h6 class="card-subtitle mb-2 text-muted">{{offering.hasPriceSpecification.hasCurrencyValue}} {{offering.hasPriceSpecification.hasCurrency }}</h6>
            <p class="card-text">{{offering.description}}</p>
            <LinkTo class="btn btn-primary" role="button" @route="offerings.edit" @model={{ offering.uri.value }}>Edit</LinkTo>
            <button type="button" class="btn btn-danger" {{ on "click" (fn this.removeOffering offering) }}>Delete</button>
          </div>
        </div>
      </div>
    {{/each}}
  </div>

  <button class="btn btn-primary" type="button" {{ on "click" this.sync }} id="sync-button">Sync your offerings</button>
</div>
{{outlet}}