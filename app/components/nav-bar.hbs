<BsNavbar
  @type="dark"
  @backgroundColor="red"
  @toggleBreakpoint="md"
  as |navbar|
>
  <LinkTo @route="index" class="navbar-brand">The Solid Shop</LinkTo>
  <navbar.toggle />
  <navbar.content>
    <navbar.nav as |nav|>
      <nav.item>
        <nav.link-to @route="index">Home</nav.link-to>
      </nav.item>
      <nav.item>
        <nav.link-to @route="products.index">Your products</nav.link-to>
      </nav.item>
      <nav.item>
        <nav.link-to @route="offerings.index">Your offerings</nav.link-to>
      </nav.item>
    </navbar.nav>
    <navbar.nav class="ms-auto" as |nav|>
      <nav.item>
        <nav.link-to @route="profile">Profile</nav.link-to>
      </nav.item>
    </navbar.nav>
  </navbar.content>
</BsNavbar>
